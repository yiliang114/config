root = true

[*]
charset = utf-8
# 缩进风格
indent_style = space
# 缩进宽度
indent_size = 2
# 换行符
end_of_line = lf
# 设为true表示使文件以一个空白行结尾
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
max_line_length = 100

[*.{json,yml}]
indent_style = space
indent_size = 2

# https://editorconfig.org/
